<div {{ attributes }}>
  <main class="container-md">
    <div class="card">
      <div class="card-header bg-info">
        <div class="row">
          <div class="col-4">
            <h3>المجموعات</h3>
          </div>
          <div class="col-6">
            <input class="form-control" type="search" data-model="query" />
          </div>
          <div class="col-2">
            <a href="{{ path('categorie.create') }}"><i class="bi bi-plus-square-fill h1 text-success float-start"></i></a>
          </div>
        </div>
      </div>
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
              <tr>
                <th>التعيين</th>
                <th>المدين</th>
                <th>الدائن</th>
                <th>الرصيد</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              {% for cat in this.categories %}
                <tr>
                  <td>{{ cat.intitule }}</td>
                  <td>{{ cat.debit|number_format(2, ',', '.') }}</td>
                  <td>{{ cat.credit|number_format(2, ',', '.') }}</td>
                  <td>{{ (cat.debit - cat.credit)|number_format(2, ',', '.') }}</td>
                  <td>
                    <a href="{{ path('categorie.edit', { id: cat.id }) }}"><i class="bi bi-pencil-square h2 text-success"></i></a>
                  </td>
                </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</div>
